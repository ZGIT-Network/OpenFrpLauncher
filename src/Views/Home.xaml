<UserControl
    x:Class="OpenFrp.Launcher.Views.Home"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:Awe.UI.Helper;assembly=Awe.UI"
    xmlns:local="clr-namespace:OpenFrp.Launcher.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="720"
    d:DesignWidth="1055"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Margin="28,48,28,8"
            FontSize="24"
            Text="首页" />
        <ScrollViewer
            Grid.Row="1"
            helper:ScrollViewerBehavior.UseSmoothScroll="True"
            helper:WindowsHelper.LightModeRebind="True"
            PanningMode="VerticalFirst"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="28,0,28,40">
                <TextBlock
                    FontSize="16"
                    Text="已固定的隧道"
                    TextWrapping="Wrap" />
                <WrapPanel
                    Margin="0,8,0,16"
                    Orientation="Horizontal"
                    TextElement.Foreground="White">
                    <Grid
                        Width="250"
                        Height="100"
                        Margin="0,0,8,8"
                        Background="Gray">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            Text="Tunnel PIN" />

                    </Grid>
                    <Grid
                        Width="250"
                        Height="100"
                        Margin="0,0,8,8"
                        Background="Gray">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            Text="Tunnel PIN" />
                    </Grid>
                    <Grid
                        Width="250"
                        Height="100"
                        Margin="0,0,8,8"
                        Background="Gray">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            Text="Tunnel PIN" />
                    </Grid>
                    <Grid
                        Width="250"
                        Height="100"
                        Margin="0,0,8,8"
                        Background="Gray">
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="24"
                            Text="Tunnel PIN" />
                    </Grid>
                </WrapPanel>
                <Grid
                    Height="200"
                    MaxWidth="1000"
                    Margin="0,0,0,12"
                    HorizontalAlignment="Left">
                    <Grid helper:RectangleCliper.CornerRadius="4">
                        <Grid.Effect>
                            <BlurEffect Radius="20" RenderingBias="Performance" />
                        </Grid.Effect>
                        <Image
                            Margin="-8"
                            Opacity=".6"
                            Source="..\Resources\Images\loginBackground.png"
                            Stretch="UniformToFill" />
                    </Grid>
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock FontSize="36" Text="枝横却月观，花绕凌风台" />
                    </Grid>
                    <!--<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Image Height="100" Source="..\Resources\desktop.ico" />
                    </StackPanel>-->
                </Grid>
                <TextBlock
                    FontSize="24"
                    Text="现阶段启动器处于测试档,还有许多不稳定的地方。"
                    TextWrapping="Wrap" />
                <TextBlock
                    FontSize="24"
                    Foreground="{DynamicResource WarningOrErrorBrush}"
                    Text="有问题请火速反馈，谢谢！！！！！！！"
                    TextWrapping="Wrap" />

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
