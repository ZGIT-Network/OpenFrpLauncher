<Window
    x:Class="OpenFrp.Launcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

    xmlns:behavior="http://schemas.microsoft.com/xaml/behaviors"

    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpenFrp.Launcher"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="clr-namespace:Awe.UI.Helper;assembly=Awe.UI"
    xmlns:vm="clr-namespace:OpenFrp.Launcher.ViewModels"
    Title="MainWindow"
    Width="900"
    Height="550"
    d:Background="Black"
    ui:WindowsHelper.DialogOpenned="False"
    Foreground="White"
    Style="{StaticResource Awe.UI.DefaultWindow}"
    mc:Ignorable="d">
    <FrameworkElement.DataContext>
        <vm:MainViewModel />
    </FrameworkElement.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Column="0"
            Width="200"
            Background="#2f222222"
            BorderBrush="#14FFFFFF"
            BorderThickness="0,0,1,0">
            <StackPanel Margin="20,20">
                <TextBlock
                    FontFamily="Montserrat"
                    FontSize="24"
                    FontWeight="Medium"
                    Text="Launcher" />
                <TextBlock
                    Margin="0,20,0,0"
                    FontSize="16"
                    FontWeight="Black"
                    Opacity=".6"
                    Text="页面" />
                <ItemsControl>
                    
                </ItemsControl>
                

                
            </StackPanel>
        </Border>
    </Grid>
</Window>
